<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DetalhesAluno">

    <ImageView
        android:id="@+id/activity_detalhes_aluno_imagemview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/activity_detalhes_guidline"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@android:drawable/ic_menu_camera"
        android:background="#BB9E9A9E"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_detalhes_guidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.4"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/activity_detalhes_aluno_button_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="Aluno Name"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/activity_detalhes_guidline"
        app:layout_constraintBottom_toBottomOf="@id/activity_detalhes_guidline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/ic_around"
        />

    <TextView
        android:id="@+id/activity_detalhes_aluno_descricao_aluno"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_detalhes_aluno_button_name"
        app:layout_constraintHorizontal_bias="1"
        android:fontFamily="@font/montserrat"
        />

</androidx.constraintlayout.widget.ConstraintLayout>